TIMESTEPPER FLOW
END

TIME
    FINAL_TIME 25 y
    INITIAL_TIMESTEP_SIZE 1e-3 d
    MAXIMUM_TIMESTEP_SIZE 100 d
END

OUTPUT
    ECLIPSE_FILE
        TIMES d 1 2 5 10 20 50 100 200 500 1000 2000 5000 9125
        OUTFILE
        EGRID
    END
    LINEREPT
END

EOS WATER
    SURFACE_DENSITY 1190 kg/m^3
    VISCOSITY CONSTANT 0.99 cP
END

EOS GAS
    SURFACE_DENSITY 1.87 kg/m^3
    DATABASE "../../common/co2.dat"
    FORMULA_WEIGHT 44.01 g/mol
    VISCOSITY CONSTANT 0.0474 cP
END

EQUILIBRATION initial_equilibrium
    DATUM_D 0 m
    PRESSURE 1 Bar
    RTEMP 56 C
END

REGION all
    COORDINATES
        -1.d20 -1.d20 -1.d20
        +1.d20 +1.d20 +1.d20
    END
END

STRATA
    REGION all
    MATERIAL rock
END

FLOW_CONDITION hydrostatic_press
    TYPE
        PRESSURE hydrostatic
    /

    PRESSURE 1.0 Bar
    DATUM_D  0 m
END
